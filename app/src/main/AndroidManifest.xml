<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.takari.sleeplock">


    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.USES_POLICY_FORCE_LOCK" />

    <supports-screens
            android:anyDensity="true"
            android:smallScreens="true"
            android:normalScreens="true"
            android:largeScreens="true"
            android:xlargeScreens="false"/>

    <application
            android:name=".App"
            android:icon="@drawable/sleep_lock_icon"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".feature.MainActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden"
                  android:resizeableActivity="false">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <service android:name="com.takari.sleeplock.feature.whitenoise.service.WhiteNoiseService" />
        <service android:name="com.takari.sleeplock.feature.sleeptimer.service.SleepTimerService" />

        <receiver android:name="com.takari.sleeplock.feature.whitenoise.service.WhiteNoiseServiceReceiver" />
        <receiver android:name="com.takari.sleeplock.feature.sleeptimer.service.SleepTimerServiceReceiver" />

        <receiver
                android:name="com.takari.sleeplock.feature.sleeptimer.admin.SleepTimerAdminReceiver"
                android:label="SleepLock"
                android:description="@string/device_admin_description"
                android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                    android:name="android.app.device_admin"
                    android:resource="@xml/device_admin_sample" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>