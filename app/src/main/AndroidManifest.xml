<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.sleeplock">

    <application
            android:name=".injection.Application"
            android:allowBackup="true"
            android:icon="@drawable/sleep_lock_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".data.service.MainService"/>
        <receiver android:name=".data.receiver.NotificationBroadcastReceiver"/>

    </application>

</manifest>